    input:
        genome = "/beegfs/datasets/genomes/hg38/GATK_bundle_new/v0/Homo_sapiens_assembly38.fasta",
        vcf = "COSMIC_clipOverlap/{sample}_somatic.filtered.COSMIC.vcf"
