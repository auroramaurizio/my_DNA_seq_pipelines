#DATADIR_SHORT

samplesheet = pd.read_table("/beegfs/scratch/ric.cosr/ric.cosr/ric.caravagna/CaravagnaG_1607_WGS/Merged/sarek/caravagnag_1607_wgs_6/recalibrated.tsv", header=None)

samplesheet.columns =['pat', 'sex', 'con', 'pref','bam','bai']

SAMP = samplesheet.pref

SAMPLE = ' '.join(map(str, SAMP))

print("SAMPLE",SAMPLE)



SAMPLELIST = ["UPN02","UPN03","UPN04","UPN05","UPN06"]

SUFF=set(SAMPLELIST)

print("SUFF", SUFF)

SUFFIX = ' '.join(map(str, SUFF))




path = "logs_slurm"
try:

    os.mkdir(path)
except OSError:
    print ("Creation of the directory %s failed" % path)
else:
    print ("Successfully created the directory %s " % path)

