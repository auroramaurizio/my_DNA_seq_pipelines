rule all:
    input:
      expand(["KASP/{samp}_KASP.vcf.gz"], samp=SAMPLE.split(' '))
      #expand(["{pref}_KASP_PRE_vs_PG.diff.sites_in_files"], pref=SUFFIX.split(' ')),
      #expand(["{pref}_KASP_PRE_vs_DG.diff.sites_in_files"], pref=SUFFIX.split(' ')),
